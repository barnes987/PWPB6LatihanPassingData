<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:src="@drawable/logo_hitam" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <ImageButton
            android:id="@+id/gomart"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/menu_gomart" />

        <ImageButton
            android:id="@+id/goride"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/gomart"
            android:background="@drawable/menu_goride" />

        <ImageButton
            android:id="@+id/gofood"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/gomart"
            android:layout_marginRight="35dp"
            android:background="@drawable/menu_gofood" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/goride"
            android:layout_toRightOf="@id/gofood"
            android:background="@drawable/menu_gosend" />
    </RelativeLayout>


</LinearLayout>